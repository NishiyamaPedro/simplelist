<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
    </style>
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>